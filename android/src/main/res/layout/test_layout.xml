<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    app:cardElevation="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_10">
    <!--
    card_view:cardBackgroundColor="@color/white"
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_5">

                <RelativeLayout
                    android:id="@+id/item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/item1_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/vector_give" />

                    <TextView
                        android:id="@+id/item1_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item1_icon"
                        android:layout_marginTop="4dp"
                        android:text="2km" />

                    <TextView
                        android:id="@+id/item1_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@id/item1_point"

                        android:maxLines="1"
                        android:text="杭州留下西溪印象城"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/item1_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item1_icon"
                        android:layout_marginStart="@dimen/dp_60"
                        android:text="外婆家" />
                </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item2"
            android:layout_below="@id/item_1">

            <ImageView
                android:id="@+id/item2_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/vector_take"
                />

            <TextView
                android:id="@+id/item2_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item2_icon"
                android:layout_marginTop="4dp"
                android:text="2km"
                />

            <TextView
                android:id="@+id/item2_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_toEndOf="@id/item2_icon"
                android:text="杭州留下浙江工业大学"
                android:textSize="@dimen/sp_16"

                />

            <TextView
                android:id="@+id/item2_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item2_icon"
                android:layout_marginStart="@dimen/dp_60"
                android:maxLines="1"
                android:text="东十四"
                />

        </RelativeLayout>
            </LinearLayout>

        <RelativeLayout
            android:id="@+id/jie_dan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_0"

            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/get_order_icon"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_alignStart="@+id/get_order_textView"
                android:layout_alignTop="@+id/get_order_textView"
                android:background="@mipmap/run_errands_button"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="接单"
                android:textColor="@color/white"
                android:id="@+id/get_order_textView" />
        </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_line"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="订单备注："
                android:textColor="@color/darkorange"
                />

            <TextView
                android:id="@+id/order_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单备注订单备注订单备注"
                android:textColor="@color/darkorange"
                />
        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>